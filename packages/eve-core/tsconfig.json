{
  "compilerOptions": {
    "target": "ES2021",
    "lib": ["ES2019"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "outDir": "build",
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "noImplicitAny": true,
    "allowUnreachableCode": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": true,
    "sourceMap": true,
    "removeComments": true
  },
  "include": [
    "**/*.ts",
    "src/index.ts"
  ],
  "exclude": [
    "node_modules",
    ".idea",
    "build",
    "dist"
  ]
}
